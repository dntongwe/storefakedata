
<%= form_for @category do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>


  <div class="field">
    <%= f.label :parent_id %><br />
    <%= f.collection_select :parent_id, Category.order(:name), :id, :name, include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>