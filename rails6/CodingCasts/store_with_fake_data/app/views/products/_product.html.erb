
    <div class="product">
      <h2><%= link_to product.name, product %></h2>
          <div class="details">
            <%= number_to_currency(product.price) %> |
        <% if product.released_at? %>
            Released on <%= product.released_at.strftime("%B %e, %Y") %>
             <% else %>
             Comming Soon
             <% end %>
          </div>
          <div class="details">
            <h3>
              <%= link_to h(product.name), product %>
              <%= number_to_currency(product.price) %>
            </h3>
            Category: <%=h product.category.name %>
            <% form_for product.cart_items.build do |f| %>
              <%= f.hidden_field :product_id %>
              <%= f.submit "Add to Cart" %>
            <% end %>
          </div>
    </div>
